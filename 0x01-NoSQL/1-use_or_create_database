#!/usr/bin/env python3

"""
This module contains a function that creates or uses the database my_db.
"""

import pymongo

def create_or_use_db():
    """
    This function creates or uses the database my_db.
    """
    # Connect to the MongoDB instance
    client = pymongo.MongoClient("mongodb://localhost:27017/")

    # Create or use the database my_db
    db = client["my_db"]

if __name__ == "__main__":
    create_or_use_db()
