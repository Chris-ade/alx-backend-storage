#!/usr/bin/env python3

"""
This module contains a function that inserts a document into the collection school.
"""

import pymongo

def insert_document():
    """
    This function inserts a document into the collection school.
    """
    # Connect to the MongoDB instance
    client = pymongo.MongoClient("mongodb://localhost:27017/")

    # Access the database my_db
    db = client["my_db"]

    # Access the collection school
    school = db["school"]

    # Insert a document into the collection school
    school.insert_one({
        "name": "ABC School",
        "location": "San Francisco",
        "established": 1980
    })

if __name__ == "__main__":
    insert_document()
